<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/icon_setting"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="430dp"
            />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/ic_empty_picture"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        />


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="点击登录即可发表评论"
          android:gravity="center_horizontal"
          android:layout_marginTop="30dp"
          android:layout_gravity="center_horizontal"
          />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_grey_heart"
            android:layout_marginLeft="100dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="收藏"
            android:layout_gravity="center_vertical"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="|"
            android:gravity="center_vertical"
            android:layout_marginLeft="90dp"
            />



        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/ic_action_reply_grey_without_padding"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="评论"
            android:layout_gravity="center_vertical"
             android:layout_marginLeft="10dp"
            />




    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B2B2B2"
        />



    <TextView
        android:id="@+id/bai_huancun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的缓存"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/bai_jilu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="观看记录"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/bai_yijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="意见反馈"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />




</LinearLayout>